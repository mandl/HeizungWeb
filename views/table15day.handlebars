<div id="forcastTable" class="container-fluid">
<div class="table-responsive-sm">
<table class="table table-striped table-sm">
<caption>{{locdata}}</caption>
  <thead>
    <tr>
      <th scope="col">Time</th>
      <th scope="col">Day</th>
      <th scope="col">Temp</th>
      <th scope="col">Humidity</th>
      <th scope="col">Sky</th>
      <th scope="col">Rain %</th>
      <th scope="col">Wind speed</th>
      <th scope="col">Wind dir</th>
    </tr>
  </thead>
  <tbody>
{{#each data.forecasts}}
    <tr>
        <td>{{formatTimeTwc fcst_valid_local}}</td>
        <td>{{dow}}</td>
        <td>{{temp}}</td>
        <td>{{rh}}</td>
        <td>{{phrase_32char}}</td>
        <td>{{pop}}</td>
        <td>{{wspd}}</td>
        <td>{{wdir_cardinal}}</td>
    </tr>
{{/each}}
</tbody>
</table>
</div>
</div>

