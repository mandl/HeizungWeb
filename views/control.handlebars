<script>

const chLine = document.getElementById("runtimeBar");
var decodedJson = decodeURIComponent("{{{burnerData}}}");
var chartData = JSON.parse(decodedJson);

if (chLine) {
  var tempChart = new Chart(chLine, {
  type: 'line',
  data: chartData,
  options: {
    title: {
      display: true,
      text: 'Runtime'
    },
    scales: {
      yAxes: [{
        ticks: {
          beginAtZero: false
        }
      }]
    },
    legend: {
      display: true
    }
  }
  });
 } 
  

